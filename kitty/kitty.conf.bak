allow_remote_control yes
# font_family Iosevka Term
# font_family SFMono Nerd Font
# font_family FiraCode Nerd Font
# font_family Iosevka Nerd Font Mono
font_size 15.0
modify_font cell_width 85%

# text_composition_strategy legacy
shell_integration no-cursor
enable_audio_bell no
dynamic_background_opacity yes
hide_window_decorations no 
macos_option_as_alt yes
window_padding_width 0
window_padding_height 0

foreground #ffffff
placement_strategy top
cursor #cccccc
cursor_trail 10
cursor_trail_start_threshold 2
cursor_trail_decay 0.1 0.15
cursor_shape block
cursor_blink true
set_background_opacity 1

# Option + Left/Right for word-skip
map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66

# Go to tab
map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6
map cmd+7 goto_tab 7
map cmd+8 goto_tab 8
map cmd+9 goto_tab 9

# font_family      family="Menlo"
# bold_font        "Menlo Bold"
# italic_font      "Menlo Italic"
# bold_italic_font "Menlo Bold Italic"
# font_family      JetBrains Mono
# bold_font        JetBrains Mono Bold
# italic_font      JetBrains Mono Italic
# bold_italic_font JetBrains Mono Bold Italic

# tab_bar_style       custom
# tab_separator       ""
# tab_title_template  " {index} {title} "

tab_bar_style                   custom
tab_separator                   ""
tab_fade                        0 0 0 0

tab_title_template              "{fmt.fg._adb5bd}{fmt.bg.default}  {index}:{title}{' []' if layout_name == 'stack' else ''} "
active_tab_title_template       "{fmt.fg._FFC552}{fmt.bg.default}  {index}:{title}{' []' if layout_name == 'stack' else ''} "

tab_bar_edge                    bottom
tab_bar_align                   left
tab_bar_margin_width            15.0
tab_bar_margin_height           10.0 0.0
active_tab_font_style           normal
inactive_tab_font_style         normal
tab_bar_min_tabs                1
tab_activity_symbol             none
bell_on_tab                     no
